@using GridMvc.Html
@model IEnumerable<OctagonPlatform.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}
<div class="page-header">
    <h3 class="panel-title">Users List</h3>
</div>
<p>
    @Html.ActionLink("Add User", "Create", "Users", routeValues: null, htmlAttributes: new { @class = "fa fa-plus fa-fw" })
</p>
@Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.UserName)
    .Titled("User Name")
    .SetWidth(100);

    columns.Add(m => m.Partner.BusinessName)
    .Titled("Partner")
    .SetWidth(100);

    columns.Add(m => m.Email)
    .Titled("Email")
    .SetWidth(100);

    columns.Add(m => m.Status)
    .Titled("Status")
    .SetWidth(100);

    columns.Add().Encoded(false).Sanitized(false).SetWidth(10).Titled("Edit")
            .RenderValueAs(m =>
            @<b>
                @Html.ActionLink("Edit", "Edit", new { id = m.Id }, new { @class = "fa fa-pencil fa-fw" })
            </b>);

    columns.Add().Encoded(false).Sanitized(false).SetWidth(10).Titled("Edit")
            .RenderValueAs(m =>
            @<b>
                @Html.ActionLink("Delete", "Delete", new { id = m.Id }, new { @class = "fa fa-trash" })
            </b>);

    columns.Add().Encoded(false).Sanitized(false).SetWidth(10).Titled("Edit")
            .RenderValueAs(m =>
            @<b>
                @Html.ActionLink("Details", "Details", new { id = m.Id })
            </b>);

}).WithPaging(50)


