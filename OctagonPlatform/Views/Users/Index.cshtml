@model IEnumerable<OctagonPlatform.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}
<div class="form-group">
    <input type="text" class="form-control" id="searchUser" placeholder="Search" name="search" />
</div>
<div class="page-header">
    <h3 class="panel-title">List Users</h3>
</div>
<p>
    @Html.ActionLink("Add User", "Create", "Users", routeValues:null, htmlAttributes: new{@class = "glyphicon glyphicon-plus-sign" })
</p>
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Parent</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody id="listOfUsers">
    @foreach (var item in Model)
    {
        <tr class="info">
            <td>@item.Partner.BusinessName</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.Status</td>
            <td>@Html.ActionLink("Edit", "Edit", new {id = item.Id})</td>
            <td>@Html.ActionLink("Delete", "Delete", new {id = item.Id},
                                                                 new {onclick = "return confirm('Are sure wants to delete?');"})</td>
            <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
        </tr>
    }
    
</table> 
@section Scripts {
    @Scripts.Render("~/bundles/search")
}
