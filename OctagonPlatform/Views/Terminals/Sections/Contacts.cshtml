@model IEnumerable<OctagonPlatform.Models.TerminalContact>
    
<div id="getContacts" class="panel-collapse collapse">
    <div class="col-md-6" style="margin-top: 20px; margin-bottom: 20px">
        @Ajax.ActionLink("ADD", "Create", "TerminalContacts", new { terminalId = ViewData["terminalId"]?.ToString() },
                   new AjaxOptions
                   {
                       UpdateTargetId = "AddContact",
                       LoadingElementId = "loading3",
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "Get"
                   },
                   htmlAttributes: new
                   {
                       @class = "link",
                       data_toggle = "modal",
                       data_target = "#AddContact"
                   })
    </div>

    @*
        <p class="alert alert-info">
            <strong>@ViewBag.Error</strong>
        </p>
    *@

    <table id="contacts" class="table table-striped table-hover table-bordered">
        <thead class="thead-blue">
            <tr>
                <th>Terminal</th>
                <th>Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>

            </tr>
        </thead>
        <tbody id="listOfTerminalContacts">
            @foreach (var item in Model)
    {
        if (!item.Deleted)
        {
            <tr class="info">
                <td>@item.TerminalId</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Address1</td>
         
            </tr>
        }
    }
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/search")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    @* @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js") *@

    <script>
        var jQuery_1_10_2 = $.noConflict(true);

        jQuery_1_10_2(function () {
            $("#contacts").DataTable();
        });
    </script>
}

