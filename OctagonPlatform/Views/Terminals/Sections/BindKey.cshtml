@model OctagonPlatform.Models.FormsViewModels.BindKeyViewModel

@using (Html.BeginForm("SetBindKey", "Terminals"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.TerminalId)
    <div class="form-group">
        <p class="alert alert-warning">
            All fields are <strong>required.</strong>
            @ViewBag.Error
            @Html.ValidationSummary(false, "Please fix the fallowing errors!!!", new { @class = "text-danger" })
        </p>

        <div class="form-group">
            @Html.LabelFor(m => m.Serial1)
            @Html.TextBoxFor(m => m.Serial1, new { @class = "form-control", placeholder = "serial 1" })
            @Html.ValidationMessageFor(m => m.Serial1)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Serial2)
            @Html.TextBoxFor(m => m.Serial2, new { @class = "form-control", placeholder = "serial 2" })
            @Html.ValidationMessageFor(m => m.Serial2)
        </div>
    </div>
    <div class="form-group">

        <button type="submit" class="btn btn-primary">Save</button>

    </div>
}
<h2>Current Terminal Key Information</h2>

<div class="row">
    <table>
        <tr>
            <td>Serial number 1:</td>
            <td>
                @Html.Label(Model.Serial1)
            </td>
            <td>Check Digit 1:</td>
            <td>@Model.CheckDigt1</td>
        </tr>
        <tr>
            <td>Serial number 2:</td>
            <td>@Html.Label(Model.Serial2)</td>
            <td>Check Digit 2:</td>
            <td>@Model.CheckDigt2</td>
        </tr>
        <tr>
            <td>Encripytion Type</td>
            <td>Triple DES</td>
            <td>ATM Check Digit</td>
            <td>@Model.ATMCheckDigt</td>
        </tr>

        <tr>
            <td>Date Bound:</td>
            <td>@DateTime.Now</td>
        </tr>
    </table>
</div>







