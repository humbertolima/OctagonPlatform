    <table id="interchanges" class="table table-striped table-hover table-bordered">
        <thead class="thead-blue">
            <tr>
                <th>BankAccount</th>
                <th>BankName</th>
                <th>Split Amount</th>
                <th>Effective Date</th>
                <th>Stop Date</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        @if (Model != null)
        {

            foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.BankAccount.NickName</td>
                        <td>@item.BankAccount.BankName</td>
                        <td>@item.SplitAmount</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.StopDate.ToShortDateString()</td>
                        <td>
                            <i class="fa fa-pencil" style="color: darkblue; font-size: 16px;"></i>@Html.ActionLink(
                                                                    linkText: "Edit",
                                                                    actionName: "Edit",
                                                                    controllerName: "InterChange",
                                                                    routeValues: new
                                                                    {
                                                                        id = item.Id
                                                                    },
                                                                    htmlAttributes: null
                                                                    )
                        </td>
                        <td>
                            <i class="fa fa-trash" style="color: red; font-size: 16px;"></i><button type="button" style="margin: -2px;" data-id="@item.Id" id="deleteInterchange" class="btn-link" data-toggle="modal" data-target="#confirmdeleteInterchange">Delete</button>
                        </td>

                    </tr>


                </tbody>

            }
        }



    </table>

