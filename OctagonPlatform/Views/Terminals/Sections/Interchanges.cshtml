@model IEnumerable<OctagonPlatform.Models.InterChange>

<div id="getInterchange" class="panel-collapse collapse">
    <button type="button" class="btn btn-info btn-microsoft" data-toggle="modal" data-target="#AddInterchange">Add</button>
    <div class="col-md-6" style="margin-top: 20px; margin-bottom: 20px">
        @Html.ActionLink(
                     linkText: "Add Interchange",
                     actionName: "Create",
                     controllerName: "InterChange",
                     routeValues: new
                     {
                         terminalId = ViewData["terminalId"]?.ToString()
                     },
                        htmlAttributes: null
                        )
    </div>
    @*
        <p class="alert alert-info">
            <strong>@ViewBag.Error</strong>
