@model IEnumerable<OctagonPlatform.Models.Terminal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}

<h3 class="alert-info">Terminals</h3>
<nav class="navbar navbar-default"> 
    <div class="container-fluid">
        
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink(
                                       linkText: "Add Terminal",
                                       actionName: "Create",
                                       controllerName: "Terminals",
                                       routeValues: new
                                       {
                                           partnerId = int.Parse(Session["partnerId"].ToString())
                                       },
                                       htmlAttributes: null
                                       )</li>
            </ul>
            <div class="form-group">
                <input type="text" class="form-control" id="searchTerminal" placeholder="Search" name="search" />
            </div> 
        </div>
    </div>
</nav>

<p class="alert alert-info">
    <strong>@ViewBag.Error</strong>
</p>
<table id="terminalsTable"class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Terminal ID</th>
            <th>Partner</th>
            <th>Location Type</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Country</th>
            <th>City</th>
            <th>State</th>
            <th>Status</th>
            <th>Cash Balance</th>
        </tr>
    </thead>
    
    <tbody id="listOfTerminals">

        @foreach (var item in Model)
        {
            <tr class="info">
                <td>@item.TerminalId</td>
                <td>@item.Partner.BusinessName</td>
                <td>@item.LocationType.Name</td>
                <td>@item.Address1</td>
                <td>@item.Phone</td>
                <td>@item.Country.Name</td>
                <td>@item.City.Name</td>
                <td>@item.State.Name</td>
                <td>@item.Status</td>
                <td>@item.Balance</td>
                <td><i class="glyphicon glyphicon-edit"></i>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>
                    <i class="glyphicon glyphicon-trash"></i>@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                                 
                </td>
                <td><i class="glyphicon glyphicon-eye-open"></i>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        }
        </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/bundles/search")
    <script>
        $(document).ready(function() {
            $("#terminalsTable").DataTable();
        })
    </script>
}


