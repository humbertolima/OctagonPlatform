@using System.Web.Http.Tracing
@model IEnumerable<OctagonPlatform.Models.Terminal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="buttonterminal">
        <h1 class="page-header">Terminals</h1>
        @Html.ActionLink(
            linkText: "Add Terminal",
            actionName: "Create",
            controllerName: "Terminals",
            routeValues: new
            {
                partnerId = int.Parse(Session["partnerId"].ToString())
            },
            htmlAttributes: new {@class= "btn btn-primary" }
            )
    </div>
    <hr>

    <div class="alert-info">
        <strong>@ViewBag.Error</strong>
    </div>
    
    <table id="terminals" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Partner</th>
            <th>Location</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Country</th>
            <th>City</th>
            <th>State</th>
            <th>Status</th>
            <th>Balance</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Details</th>

        </tr>
        </thead>
    
        <tbody id="listOfTerminals">

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TerminalId</td>
                <td>@item.Partner.BusinessName</td>
                <td>@item.LocationType.Name</td>
                <td>@item.Address1</td>
                <td>@item.Phone</td>
                <td>@item.Country.Name</td>
                <td>@item.City.Name</td>
                <td>@item.State.Name</td>
                <td>@if (item.Status.ToString().Equals("Active"))
                    {
                        <strong class="text-success">
                            @item.Status
                        </strong>
                    }
                    else if (item.Status.ToString().Equals("Inactive"))
                    {
                        <strong class="text-danger">
                            @item.Status
                        </strong>
                    }
                    else
                    {
                        <strong class="text-warning">
                            @item.Status
                        </strong>
                    }
                </td>
                <td>@if (item.Balance.ToString().Equals(""))
                    {
                        <p>$0.00</p>
                    }
                    else
                    {

                        <p>$@item.Balance</p>
                    }
                </td>
                <td>
                    <i class="fa fa-pencil"style="font-size: 16px; color: darkblue"></i> @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                </td>
                <td>
                  @*  <i class="fa fa-trash"style="font-size:16px;color:red"></i> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) *@
                    
                    <button type="button" value ="@item.Id" id="deleteItem" class="btn btn-info btn-microsoft" data-toggle="modal" data-target="#DeleteTerminalModal" >Delete</button>
                    
                    
                </td>
                <td><i class="fa fa-list"style="font-size:16px;color:green"></i> @Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        }
        </tbody>

    </table>
</div>

@Html.Partial("DeleteTerminalModal")

@section Scripts {
    @Scripts.Render("~/bundles/search")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    <script>

        var jQuery_1_10_2 = $.noConflict(true);

        jQuery_1_10_2(function() {
            $("#terminals").DataTable();
        });
    </script>

    <script>
        $(document).ready(function() {
            $("#confirm").click(function() {
                var id = $("#deleteItem").val();
                $("#itemId").val(id);
            });
        });
    </script>
}

