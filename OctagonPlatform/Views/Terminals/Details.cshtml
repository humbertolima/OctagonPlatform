@model OctagonPlatform.Models.Terminal

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h3>Terminal: <strong>@Model.TerminalId</strong></h3>

<hr />
@Html.ActionLink(linkText: "View messages", actionName: "Index", controllerName: "TerminalMessages", routeValues: new
{
    terminalId = Model.TerminalId
}, htmlAttributes: null)

<div class="row" id="detailterminal">

    <div class="col-md-6">
        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getConfigurations">
                        <i class="fa fa-sun-o" style="font-size:25px;color:#4776a1"></i>
                        <a data-toggle="collapse" href="#getConfigurations">Configuration</a>
                    </h3>
                    @Html.Partial("Sections/ConfigNotification", Model.TerminalAlertConfigs)
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getGeneralInfo">
                        <i class="fa fa-info-circle" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getGeneralInfo">General Info</a>
                    </h3>
                    @Html.Partial("Sections/GeneralInfo", Model)
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getCassettes">
                        <i class="fa fa-money" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getCassettes">Cassettes</a>
                    </h3>
                    @Html.Partial("Sections/Cassettes", Model.Cassettes, new ViewDataDictionary() { { "terminalId", Model.Id } })
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getNotes">
                        <i class="fa fa-sticky-note-o" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getNotes">Notes</a>
                    </h3>
                    @Html.Partial("Sections/Notes", Model)
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getDocuments">
                        <i class="fa fa-file-text" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getDocuments">Documents</a>
                    </h3>
                    @Html.Partial("Sections/Documents", Model)
                </div>
            </div>
        </div>
        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getPictures">
                        <i class="fa fa-picture-o" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getPictures">Pictures</a>
                    </h3>
                    @Html.Partial("Sections/Pictures", Model)
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getContacts">
                        <i class="fa fa-book" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getContacts">Contacts</a>
                    </h3>
                    @Html.Partial("Sections/Contacts", Model.TerminalContacts, new ViewDataDictionary() { { "terminalId", Model.Id } })
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getVaultCash">
                        <i class="fa fa-money" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getVaultCash">Vault Cash</a>
                    </h3>
                    @Html.Partial("Sections/VaultCash", Model.VaultCash, new ViewDataDictionary() { { "terminalId", Model.Id } })
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getSurcharge">
                        <i class="fa fa-bank" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getSurcharge">Surcharge</a>
                    </h3>
                    @Html.Partial("Sections/Surcharge", Model.Surcharges, new ViewDataDictionary() { { "terminalId", Model.Id } })
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getInterchange">
                        <i class="fa fa-bank" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getInterchange">Interchanges</a>
                    </h3>
                    @Html.Partial("Sections/Interchanges", Model.InterChanges, new ViewDataDictionary() { { "terminalId", Model.Id } })
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getCashManagement">
                        <i class="fa fa-bank" style="font-size:25px;color:#4776a1"></i><a data-toggle="collapse" href="#getCashManagement">Cash Management</a>
                    </h3>
                    @Ajax.ActionLink("Cash Management", "CashManagement", "Terminals", new { terminalId = Model.TerminalId },
                   new AjaxOptions
                   {
                       UpdateTargetId = "getCashManagement",
                       LoadingElementId = "loading3",
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "Post"
                   },
                   htmlAttributes: new
                   {
                       @class = "link",
                       data_toggle = "collapse",
                       data_target = "#getCashManagement"
                   })
                    <div id="getCashManagement" class="panel-collapse collapse">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-group" style="width: 100%;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="texth3" data-toggle="collapse" data-target="#getBindKey">
                        <i class="fa fa-bank" style="font-size:25px;color:#4776a1"></i>
                        <a data-toggle="collapse" href="#getBindKey">Get Bind Key</a>
                    </h3>
                    @Ajax.ActionLink("Bind Key", "GetKey", "Terminals", new { terminalId = Model.TerminalId },
                   new AjaxOptions
                   {
                       UpdateTargetId = "getBindKey",
                       LoadingElementId = "loading3",
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "Post"
                   },
                   htmlAttributes: new
                   {
                       @class = "link",
                       data_toggle = "collapse",
                       data_target = "#getBindKey"
                   })
                    <div id="getBindKey" class="panel-collapse collapse">
                        <div class="loader"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="AddInterchange" class="modal fade" role="dialog">
    <div class="loader"></div>
</div>

<div id="AddSurcharge" class="modal fade" role="dialog">
    <div class="loader"></div>
</div>

<div id="AddVaultCash" class="modal fade" role="dialog">
    <div class="loader"></div>
</div>

<div id="AddContact" class="modal fade" role="dialog">
    <div class="loader"></div>
</div>


@section Scripts {

    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

    <script>
        $(function () {
            $("#deleteInterchange").click(function () {
                var id = $(this).data('id');
                $("#confirmdeleteInterchange #id").val(id);

            });
        });



    </script>



}
