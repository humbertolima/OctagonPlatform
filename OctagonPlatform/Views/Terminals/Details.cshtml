<!-- load jQuery 1.3.2 -->
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript">
    var jQuery_1_12_4 = $.noConflict(true);
</script>
<script>

    jQuery_1_12_4(function () {
        $("#slider-range").slider({
            range: true,
            min: 0,
            max: 24,
            values: [8, 13],
            slide: function (event, ui) {
                $("#amount").val("H " + ui.values[0] + ":00 - H " + ui.values[1]+":00");
            }
        });
        $("#amount").val("H " + $("#slider-range").slider("values", 0) + ":00" +
            " - H " + $("#slider-range").slider("values", 1)+":00");
    });
</script>