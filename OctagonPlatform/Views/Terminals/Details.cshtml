@model OctagonPlatform.Models.Terminal

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}
<h3 class="alert-info">Terminal: <strong class="alert-info">@Model.Id</strong></h3>
<br />
<hr />
<p>
    <label for="amount">Price range:</label>
    <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
</p>

<div id="slider-range"></div>


<br />
@Html.ActionLink(linkText: "View messages", actionName: "Index", controllerName: "TerminalMessages", routeValues: new
{
    terminalId = Model.TerminalId
}, htmlAttributes: null)

<div class="panel-group" style="width: 33%; float:right;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="alert-info">@Ajax.ActionLink("Config Notification", "ConfigNotification", "Terminals", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "getConfigNotification", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }, htmlAttributes: new { @class = "link", data_toggle = "collapse", data_target = "#getConfigNotification" })</h3>

            <div id="getConfigNotification" class="panel-collapse collapse">
                <img id="loading4" style="display:none" src="~/Content/loading_icon.gif" alt="" />
            </div>
        </div>
    </div>
</div>
<div class="panel-group" style="width: 33%;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="alert-info">@Ajax.ActionLink("General Info", "GeneralInfo", "Terminals", new { terminalId = Model.Id }, new AjaxOptions { UpdateTargetId = "getGeneralInfo", LoadingElementId = "loading3", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }, htmlAttributes: new { @class = "link", data_toggle = "collapse", data_target = "#getGeneralInfo" })</h3>

            <div id="getGeneralInfo" class="panel-collapse collapse">
