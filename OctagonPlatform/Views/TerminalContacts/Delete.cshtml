        <dd>
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
        <dt>
            State
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State.Name)
        </dd>
        <dt>
            Contact Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactType.Name)
        </dd>
        <dt>
