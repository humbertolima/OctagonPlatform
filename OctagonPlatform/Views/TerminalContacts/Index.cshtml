@model IEnumerable<OctagonPlatform.Models.TerminalContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}

<h3 class="alert-info">List Contacts</h3>
<nav class="navbar navbar-default">
    <div class="container-fluid">

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <form class="navbar-form navbar-left form-group">
                <div>
                    <input type="text" id="searchTerminalContact" class="form-control" placeholder="Search" name="search">
                </div>
            </form>

        </div>
    </div>
</nav>


<p class="alert alert-danger">
    <strong>@ViewBag.Error</strong>
</p>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Partner</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Addres</th>
        </tr>
    </thead>
    <tbody id="listOfTerminalContacts">
        @foreach (var item in Model)
        {
            <tr class="info">
                <td>@item.TerminalId</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Address1</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, terminalId = item.TerminalId })
                    
                </td>
                <td><i class="glyphicon glyphicon-eye-open"></i>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
            </tr>
        }

</table>

@section Scripts {
    @Scripts.Render("~/bundles/search")
}



