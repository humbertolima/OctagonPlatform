@section scripts
{
    <script>
        new Morris.Bar({
            element: 'bar-example',
            data: [
                { y: 'Bogota', a: 2000 },
                { y: 'Dallas', a: 3500 },
                { y: 'Miami', a: 1750 },
                { y: 'London', a: 1250 },
                { y: 'Tampa', a: 750 },
                { y: 'Ontario', a: 1600 },
                { y: 'Seatle', a: 900 }
            ],
            xkey: 'y',
            ykeys: ['a'],
            labels: ['Amount'],
            resize: true
        });
    </script>
    
    <script>
       new Morris.Area({
            element: 'area-example',
            data: [
                { y: '2006', a: 1250 },
                { y: '2007', a: 1500 },
                { y: '2008', a: 1000 },
                { y: '2009', a: 1900 },
                { y: '2010', a: 2000 },
                { y: '2011', a: 1950 },
                { y: '2012', a: 2200 }
            ],
            lineColors: ['Green'],
            xkey: 'y',
            ykeys: ['a'],
            fillOpacity: 0.6,
            labels: ['Amount'],
            resize: true
        });
    </script>
    
    <script>
        new Morris.Line({
