    </script>

    <script>
        new Morris.Line({
            element: 'line-example',
            data: [
                { y: '2012', a: 100 },
                { y: '2013', a: 200 },
                { y: '2014', a: 150 },
                { y: '2015', a: 350 },
                { y: '2016', a: 300 },
                { y: '2017', a: 450 },
                { y: '2018', a: 525 }
            ],
            xkey: 'y',
            ykeys: ['a'],
            labels: ['Total'],
            resize: true
        });
    </script>
}
