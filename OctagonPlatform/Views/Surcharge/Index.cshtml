@model IEnumerable<OctagonPlatform.Models.Surcharge>

<div class="col-md-6" style="margin-top: 20px; margin-bottom: 20px">
    @Html.ActionLink(
        linkText: "Add Surcharge",
        actionName: "Create",
        controllerName: "Surcharge",
        routeValues: new
        {
            terminalId = ViewBag.TerminalId
        },
        htmlAttributes: null
        )
</div>


@*<p class="alert alert-info">
        <strong>@ViewBag.Error</strong>
    </p>
*@

<table id="surcharges" class="table table-striped table-hover table-bordered">
    <thead class="thead-blue">
    <tr>    
        <th>BankAccount</th>
        <th>BankName</th>
        <th>Split Amount</th>
        <th>Split Percentage</th>
        <th>Effective Date</th>
        <th>Stop Date</th>
    </tr>
    </thead>

    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tbody>
            <tr>
                <td>@item.BankAccount.NickName</td>
                <td>@item.BankAccount.BankName</td>
                <td>@item.SplitAmount</td>
                <td>@item.SplitAmountPercent</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.StopDate.ToShortDateString()</td>
                <td>
                    <i class="glyphicon glyphicon-edit"></i>@Html.ActionLink(
                                                                linkText: "Edit",
                                                                actionName: "Edit",
                                                                controllerName: "Surcharge",
                                                                routeValues: new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                htmlAttributes: null
                                                                )
                </td>
                <td>
                    <i class="glyphicon glyphicon-trash"></i>@Html.ActionLink(
                                                                 linkText: "Delete",
                                                                 actionName: "Delete",
                                                                 controllerName: "Surcharge",
                                                                 routeValues: new
                                                                 {
                                                                     id = item.Id
                                                                 },
                                                                 htmlAttributes: null)
                </td>

            </tr>


            </tbody>
            
        }
    }



</table>


@section Scripts{
@*    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js") *@
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
<script>
        var jQuery_1_10_2 = $.noConflict(true);

        jQuery_1_10_2(function() {
            $("#surcharges").DataTable();
        });
</script>
}

