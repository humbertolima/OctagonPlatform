<div id="error">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["Success"]</strong>
        </div>
    }
    @if (TempData["Danger"] != null)
    {
        <div class="alert alert-danger">
            <strong>@TempData["Danger"]</strong>
        </div>
    }
</div>

<script>
    $(function () {
        $('#error').fadeIn('slow', function () {
            $('#error').fadeOut(7000);
        });
    })

</script>