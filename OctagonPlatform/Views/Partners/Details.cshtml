@model OctagonPlatform.Models.Partner
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdminSB.cshtml";
}

<h3  class="alert-info">Partner: <strong class="alert-link">@Model.BusinessName</strong></h3>
<br />
<hr />
<br />

<img src="~/Uploads/@Model.Logo" width="100" height="50" alt="" class="img-responsive img-rounded">
<br/>
<div>
    @Html.ActionLink("Upload logo", "Index", "Logos", new { partnerId = @Model.Id, error = ""}, htmlAttributes: new{@class = "btn btn-primary"})
</div>
<br/>
<hr />
<br />
<div class="panel-group" style="width: 50%;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="alert-info">@Ajax.ActionLink("General Info", "GeneralInfo", "Partners", new { partnerId = Model.Id }, new AjaxOptions { UpdateTargetId = "getGeneralInfo", LoadingElementId = "loading1", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }, htmlAttributes: new { @class = "link", data_toggle = "collapse", data_target = "#getGeneralInfo" })</h3>

            <div id="getGeneralInfo" class="panel-collapse collapse">
                <img id="loading1" style="display:none" src="~/Content/loading_icon.gif" alt="" />
            </div>
        </div>
    </div>
</div>
<br />
<hr />
<br />
