@model OctagonPlatform.Models.Partner

<h3  class="alert-info">General Info</h3>

<div class="form-group">

    <label class="label-column">Business Name: @Model.BusinessName</label>
</div>
<div class="form-group">
    <label class="label-column">ISO: @Model.Parent.BusinessName</label>
</div>
<div class="form-group">
    <label class="label-column">Address: @Model.Address1</label>
</div>
<div class="form-group">
    <label class="label-column">Address2: @Model.Address2</label>
</div>
<div class="form-group">
    <label class="label-column">Country: @Model.Country.Name</label>
</div>
<div class="form-group">
    <label class="label-column">State: @Model.State.Name</label>
</div>
<div class="form-group">
    <label class="label-column">City: @Model.City.Name</label>
</div>
<div class="form-group">
    <label class="label-column">Created: @Model.CreatedAt</label>
</div>
<div class="form-group">
    <label class="label-column">CreatedBy: @Model.CreatedByName</label>
</div>
<div class="form-group">
    <label class="label-column">Created By: @Model.CreatedByName</label>
</div>
@if (Model.UpdatedAt != null)
{
    <div class="form-group">
        <label class="label-column">Updated: @Model.UpdatedAt</label>
    </div>
}
<div class="form-group">
    <label class="label-column">Status: @Model.Status</label>
</div>
<div class="form-group">
    <label class="label-column">Email: @Model.Email</label>
</div>
<div class="form-group">
    <label class="label-column">Mobile: @Model.Mobile</label>
</div>
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
        <li class="active">
            @Html.ActionLink(
                               linkText: "Edit",
                               actionName: "Edit",
                               controllerName: "Partners",
                               routeValues: new
                               {
                                   Id = Model.Id
                               },
                               htmlAttributes: new {@class = "btn btn-primary"}
                               )
    </li>


</ul>

</div>
