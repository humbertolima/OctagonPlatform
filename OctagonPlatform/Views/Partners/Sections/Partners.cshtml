
@model IEnumerable<OctagonPlatform.Models.Partner>


<nav class="navbar navbar-default">
    <div class="container-fluid">
        
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink(
                                       linkText: "Add Partner",
                                       actionName: "Create",
                                       controllerName: "Partners",
                                       routeValues: new
                                       {
                                           partnerId = ViewBag.PartnerId
                                       },
                                       htmlAttributes: null
                                       )</li>
            </ul>
            
        </div>
    </div>
</nav>

<p class="alert alert-info">
    <strong>@ViewBag.Error</strong>
</p>
<table class="table table-striped table-hover ">
    
    <thead>
    <tr>
        <th>Business Name</th>
        <th>Parent</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody id ="listOfPartners">
    @foreach (var item in Model)
    {
        if (!item.Deleted)
        {
            <tr class="info">
                <td>@item.BusinessName</td>
                <td>@item.Parent.BusinessName</td>
                <td>@item.Address1</td>
                <td>@item.Mobile</td>
                <td>@item.Email</td>
                <td>@item.Status</td>
                <td><i class="glyphicon glyphicon-edit"></i>@Html.ActionLink(
                                                                linkText: "Edit",
                                                                actionName: "Edit",
                                                                controllerName: "Partners",
                                                                routeValues: new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                htmlAttributes: null
                                                                )</td>
                <td><i class="glyphicon glyphicon-trash"></i>@Html.ActionLink(
                                                                 linkText: "Delete",
                                                                 actionName: "Delete",
                                                                 controllerName: "Partners",
                                                                 routeValues: new
                                                                 {
                                                                     id = item.Id
                                                                 },
                                                                 htmlAttributes: null
                                                                 )
                </td>
                <td><i class="glyphicon glyphicon-eye-open"></i>@Html.ActionLink(
                                                                    linkText: "Details",
                                                                    actionName: "Details",
                                                                    controllerName: "Partners",
                                                                    routeValues: new
                                                                    {
                                                                        id = item.Id
                                                                    },
                                                                    htmlAttributes: null
                                                                    )</td>
            </tr>

        }
    }
    </tbody>
</table> 
        
@section Scripts {
    @Scripts.Render("~/bundles/search")
}
