
@model OctagonPlatform.Models.Partner

<nav class="navbar navbar-default">
    <div class="container-fluid">

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">
                    @Html.ActionLink(
                                       linkText: "Add Contact",
                                       actionName: "Create",
                                       controllerName: "PartnerContacts",
                                       routeValues: new
                                       {
                                           partnerId = Model.Id
                                       },
                                       htmlAttributes: null
                                       )
            </li>
        </ul>

    </div>
</div>
</nav>

<p class="alert alert-info">
    <strong>@ViewBag.Error</strong>
</p>
<table class="table table-striped table-hover ">

    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody id="listOfPartners">
        @foreach (var item in Model.PartnerContacts)
        {
            if (!item.Deleted)
            {
                <tr class="info">
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.Address1</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>
                        <i class="glyphicon glyphicon-edit"></i>@Html.ActionLink(
                                                                linkText: "Edit",
                                                                actionName: "Edit",
                                                                controllerName: "PartnerContacts",
                                                                routeValues: new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                htmlAttributes: null
                                                                )
                    </td>
                    <td>
                        <i class="glyphicon glyphicon-trash"></i>@Html.ActionLink(
                                                                 linkText: "Delete",
                                                                 actionName: "Delete",
                                                                 controllerName: "PartnerContacts",
                                                                 routeValues: new
                                                                 {
                                                                     id = item.Id
                                                                 },
                                                                 htmlAttributes: null
                                                                 )
                    </td>
                    <td>
                        <i class="glyphicon glyphicon-eye-open"></i>@Html.ActionLink(
                                                                    linkText: "Details",
                                                                    actionName: "Details",
                                                                    controllerName: "PartnerContacts",
                                                                    routeValues: new
                                                                    {
                                                                        id = item.Id
                                                                    },
                                                                    htmlAttributes: null
                                                                    )
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/search")
}


