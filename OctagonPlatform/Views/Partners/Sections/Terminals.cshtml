
@model OctagonPlatform.Models.Partner

<h3>Terminals</h3>
<nav class="navbar navbar-default"> 
    <div class="container-fluid">
        
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink(
                                       linkText: "Add Terminal",
                                       actionName: "Create",
                                       controllerName: "Terminals",
                                       routeValues: new
                                       {
                                           partnerId = Model.Id
                                       },
                                       htmlAttributes: null
                                       )</li>
            </ul>
            <div class="form-group">
                <input type="text" class="form-control" id="searchTerminal" placeholder="Search" name="search" />
            </div> 
        </div>
    </div>
</nav>

<p class="alert alert-danger">
    <strong>@ViewBag.Error</strong>
</p>
<table class="table table-striped table-hover ">
    <thead>
    <tr class="danger">
        <th>Terminal ID</th>
        <th>Partner</th>
        <th>Address</th>
        <th>Zip</th>
        <th>Phone</th>
        <th>Status</th>
        <th>Cash Balance</th>
        <th>Last Transaction</th>
        <th>Last Transaction Type</th>
    </tr>
    </thead>
    
    <tbody id="listOfTerminals">

    @foreach (var item in Model.Terminals)
    {
        if (!item.Deleted)
        {
            <tr class="active">
                <td>@item.Id</td>
                <td>@item.Partner.BusinessName</td>
                <td>@item.Address1</td>
                <td>@item.Zip</td>
                <td>@item.Phone</td>
                <td>@item.Status</td>
                <td>@item.Balance</td>
                @if (item.LastTransactionId != null)
                {
                    <td>@item.LastTransactionDate</td>
                    <td>@item.LastTransaction.TransactionType</td>
                }
                else
                {
                    <td>
                    </td>
                    <td></td>
                }
                <td><i class="glyphicon glyphicon-edit"></i>@Html.ActionLink(
                                                                linkText: "Edit",
                                                                actionName: "Edit",
                                                                controllerName: "Terminals",
                                                                routeValues: new
                                                                {
                                                                    id = item.Id
                                                                },
                                                                htmlAttributes: null
                                                                )</td>
                <td>
                    <i class="glyphicon glyphicon-trash"></i>@Html.ActionLink(
                                                                 linkText: "Delete",
                                                                 actionName: "Delete",
                                                                 controllerName: "Terminals",
                                                                 routeValues: new
                                                                 {
                                                                     id = item.Id
                                                                 },
                                                                 htmlAttributes: null
                                                                 )
                </td>
                <td><i class="glyphicon glyphicon-eye-open"></i>@Html.ActionLink(
                                                                    linkText: "Details",
                                                                    actionName: "Details",
                                                                    controllerName: "Terminals",
                                                                    routeValues: new
                                                                    {
                                                                        id = item.Id
                                                                    },
                                                                    htmlAttributes: null
                                                                    )</td>
            </tr>
        }
    }
    </tbody>

</table>