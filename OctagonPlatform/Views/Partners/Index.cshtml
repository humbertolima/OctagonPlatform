@model OctagonPlatform.Models.Partner
@*@Styles.Render("~/Content/bootstrap-lumen.css")*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="container" style="padding-bottom: 20px">
    <div class="row">
        <div class="col-md-6" style="width: 200px;">
            <h1 class="page-header" style="color: #859298; font-size:30px;"> <i class="fa fa-group" style="font-size:25px;color:#859298"></i> Partners</h1>
            @Html.ActionLink(
        "Add Partner",
        "Create",
        "Partners",
        new
        {
            partnerId = int.Parse(Session["partnerId"].ToString())
        },
        new { @class = "btn btn-primary" }
        )
        </div>

        <div class="col-md-6">
            <p>
                <button type="button" class="btn btn-default btn-sm" style="margin-top: 45px;">
                    <span class="fa fa-plus-circle" style="font-size: 17px;"></span> Add
                </button>
            </p>
        </div>
    </div>
    <div class="alert-info">
        <h3>
            <strong>@ViewBag.Error</strong>
        </h3>
    </div>
    <table id="partners" class="table table-striped table-hover table-bordered">

        <thead class="thead-blue">
        <tr>

            <th>Business Name</th>
            <th>Parent</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@Html.ActionLink(Model.BusinessName, "Details", routeValues: new {id = Model.Id})</td>
            <td>@Model.Parent.BusinessName</td>
            <td>@Model.Address1</td>
            <td>@Model.Mobile</td>
            <td>@Model.Email</td>
            <td>@Model.Status</td>
            <td>
                <i class="fa fa-pencil"style="color: darkblue; font-size: 16px;"></i> @Html.ActionLink("Edit", "Edit", new {id = Model.Id})</td>
            <td>
                <i class="fa fa-trash" style="color: red; font-size: 16px;"></i><button type="button" style="margin: -2px;" value="@Model.Id" id="deleteItem" class="btn-link" data-toggle="modal" data-target="#DeletePartner">Delete</button>
            </td>
        </tr>
        @foreach (var item in Model.Partners)
        {
            if (!item.Deleted && item.Id != Model.Id)
            {
                <tr>
                    <td>@Html.ActionLink(item.BusinessName, "Details", routeValues:new {item.Id})</td>
                    <td>@item.Parent.BusinessName</td>
                    <td>@item.Address1</td>
                    <td>@item.Mobile</td>
                    <td>@item.Email</td>
                    <td>@item.Status</td>
                    <td>
                        <i class="fa fa-pencil" style="color: darkblue; font-size: 16px;";></i> @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                    </td>
                    <td>
                        <i class="fa fa-trash"style="color: red; font-size: 16px;"></i><button type="button" style="margin: -2px;" value="@item.Id" id="deleteItem" class="btn-link" data-toggle="modal" data-target="#DeletePartner">Delete</button>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

@Html.Partial("Modals/DeletePartner")

@section Scripts {
    @Scripts.Render("~/bundles/search")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")
    <script>

        var jQuery_1_10_2 = $.noConflict(true);

        jQuery_1_10_2(function() {
            $("#partners").DataTable();
        });
    </script>

    <script>
        $(document).ready(function() {
            $("#confirm").click(function() {
                var id = $("#deleteItem").val();
                $("#itemId").val(id);
            });
        });
    </script>

}